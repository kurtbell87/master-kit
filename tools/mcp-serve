#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

export MASTER_KIT_ROOT="${MASTER_KIT_ROOT:-$ROOT_DIR}"
export MASTER_KIT_MCP_HOST="${MASTER_KIT_MCP_HOST:-127.0.0.1}"
export MASTER_KIT_MCP_PORT="${MASTER_KIT_MCP_PORT:-7337}"
export MASTER_KIT_MCP_MAX_OUTPUT_BYTES="${MASTER_KIT_MCP_MAX_OUTPUT_BYTES:-32000}"

if [[ -z "${MASTER_KIT_MCP_TOKEN:-}" ]]; then
  echo "Error: MASTER_KIT_MCP_TOKEN is required" >&2
  echo "Tip: run tools/mcp-token to generate a local token." >&2
  exit 2
fi

if [[ -n "${MASTER_KIT_MCP_LOG_DIR:-}" ]]; then
  LOG_DIR="$MASTER_KIT_MCP_LOG_DIR"
else
  LOG_DIR="$ROOT_DIR/runs/mcp-logs"
fi
mkdir -p "$LOG_DIR"
export MASTER_KIT_MCP_LOG_DIR="$LOG_DIR"

if [[ -x "$ROOT_DIR/.venv/bin/python" ]]; then
  PYTHON_BIN="$ROOT_DIR/.venv/bin/python"
elif command -v python3 >/dev/null 2>&1; then
  PYTHON_BIN="$(command -v python3)"
else
  echo "Error: python3 not found" >&2
  exit 2
fi

cd "$ROOT_DIR"
exec "$PYTHON_BIN" "$ROOT_DIR/mcp/server.py" "$@"
